{
  "compilerOptions": {
    "pretty": true,
    "target": "ES2019",
    "module": "esnext",
    "moduleResolution": "Node16",
    "lib": ["es2017", "ESNext", "ESNext.Array", "DOM", "DOM.Iterable", "WebWorker"],
    "allowJs": true,
    "checkJs": true,
    "strict": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "chai", "mocha"],
    "noEmit": true
  },
  "include": ["**/*.{js,css}", "types"],
  "exclude": ["node_modules"]
}
